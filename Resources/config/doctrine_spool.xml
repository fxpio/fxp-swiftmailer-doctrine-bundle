<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="swiftmailer.spool.sonatra_doctrine_orm_spool.class">Sonatra\Component\SwiftmailerDoctrine\Spool\DoctrineSpool</parameter>

    </parameters>

    <services>

        <service id="swiftmailer.spool.sonatra_doctrine_orm_spool" class="%swiftmailer.spool.sonatra_doctrine_orm_spool.class%">
            <argument type="service" id="doctrine"/>
            <argument>%sonatra_swiftmailer_doctrine.spool_email_class%</argument>
        </service>

        <service id="swiftmailer.mailer.default.spool.sonatra_doctrine_orm_spool" alias="swiftmailer.spool.sonatra_doctrine_orm_spool" />

    </services>

</container>
